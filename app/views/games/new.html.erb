<h1>New game</h1>


  <div class="d-flex">
    <% @letters.each do |letter| %>
      <div class=""><%= letter %></div>
    <% end %>
  </div>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join('').downcase %>
  <label class="mb-2" for="answer">What is the longest word you can find?</label>
  <div class="input-group flex-fill">
    <input class="form-control" type="text" name="answer">
    <input class="btn btn-primary" type="submit" value="Play">
  </div>
</form>
